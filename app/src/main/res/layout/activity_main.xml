<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1c40f"
    android:backgroundTint="#f1c40f"
    android:foregroundTint="#f1c40f"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_next"
        android:layout_width="267dp"
        android:layout_height="58dp"
        android:layout_marginTop="544dp"
        android:backgroundTint="#34495e"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"
        android:text="다음페이지로"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="283dp"
        android:layout_height="78dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="48dp"

        android:background="#97BFD8"
        android:ems="10"
        android:hint="id"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edit_pw"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="283dp"
        android:layout_height="78dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="48dp"
        android:background="#B778D6"

        android:ems="10"
        android:hint="pw"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="259dp"
        android:layout_height="110dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="92dp"
        android:text="체리쥬빌레톡  (●'◡'●)"
        android:textAlignment="center"
        android:textColor="#591818"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>